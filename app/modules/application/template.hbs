{{!-- <h1 local-class="title" class="text-center bg-info" id="title">BP-Components-UI</h1> --}}
{{#bp-layout tagName='h1' local-class='title' classNames='border-bottom' id='title' main='between' cross='center'}}
	<img src="ph_logo.png" alt="">
	<span>BP-Components-UI</span>
	<span local-class='version'>v0.2.0</span>
{{/bp-layout}}
<section local-class="container">
	<aside>
		<nav>
			{{#bp-nav theme='light' as |n|}}
				{{#n.link-to "default"}}{{bp-icon icon='story'}}<span class="ml-2">Default</span>{{/n.link-to}}
				{{#n.link-to "theme-colors"}}{{bp-icon icon='data'}}<span class="ml-2">Theme-Colors</span>{{/n.link-to}}
				{{#n.link-to "layout"}}
					{{bp-icon icon='dashboard'}}<span class="ml-2">Container 布局器</span>
				{{/n.link-to}}
				{{#n.link-to "datepicker"}}
					{{bp-icon icon='time'}}<span class="ml-2">DatePicker 时间选择</span>
				{{/n.link-to}}
				{{#n.link-to "icon"}}{{bp-icon icon='check-circle'}}<span class="ml-2">Icon</span>{{/n.link-to}}
				{{#n.link-to "dashboard"}}{{bp-icon icon='dashboard'}}<span
						class="ml-2">CustomChart</span>{{/n.link-to}}
				{{#n.link-to "avatar"}}{{bp-icon icon='nav-person'}}<span class="ml-2">Avatar</span>{{/n.link-to}}
				{{#n.dropdown title='Buttons' icon="management" as |dd|}}
					{{#dd.link-to "button"}}
						Button{{/dd.link-to}}
					{{#dd.link-to "button-group"}}
						ButtonGroup{{/dd.link-to}}
				{{/n.dropdown}}
				{{#n.link-to "dropdown"}}{{bp-icon icon='point'}}<span class="ml-2">Dropdown</span>{{/n.link-to}}
				{{#n.link-to "choose"}}{{bp-icon icon='management'}}Radio&Checkbox{{/n.link-to}}
				{{#n.dropdown title='Inputs' icon="management" as |dd|}}
					{{#dd.link-to "input"}}
						BaiscInput{{/dd.link-to}}
					{{#dd.link-to "search-bar"}}
						SearchBar{{/dd.link-to}}
				{{/n.dropdown}}
				{{#n.link-to "card"}}{{bp-icon icon='management'}}Card{{/n.link-to}}
				{{#n.link-to "charts"}}
					{{bp-icon icon='management'}}Charts
				{{/n.link-to}}
				{{#n.link-to "navs"}}{{bp-icon icon='management'}}Nav{{/n.link-to}}
				{{#n.link-to "progress"}}{{bp-icon icon='management'}}Progress{{/n.link-to}}
				{{#n.link-to "modal"}}{{bp-icon icon='management'}}Modal{{/n.link-to}}
				{{#n.link-to "tabs"}}{{bp-icon icon='management'}}Tabs{{/n.link-to}}
				{{#n.link-to "table"}}{{bp-icon icon='product-info'}}<span class="ml-2">Table</span>{{/n.link-to}}
				{{#n.link-to "badge"}}{{bp-icon icon='management'}}Badge{{/n.link-to}}
				{{#n.dropdown title='Empty-State' icon="management" as |dd|}}
					{{#dd.link-to "empty-state"}}
						totalEmptyState{{/dd.link-to}}
					{{#dd.link-to "empty-state-primary"}}
						primary-button{{/dd.link-to}}
					{{#dd.link-to "empty-state-double-btn"}}
						double-button{{/dd.link-to}}
					{{#dd.link-to "empty-state-link-button"}}
						link-button{{/dd.link-to}}
					{{#dd.link-to "empty-state-no-button"}}
						no-button{{/dd.link-to}}
				{{/n.dropdown}}
				{{#n.link-to "page-header"}}{{bp-icon icon='management'}}Page-Header{{/n.link-to}}
				{{#n.link-to "pagination" }}{{bp-icon icon='teaching-center'}}<span class="ml-2">Pagination
						分页</span>{{/n.link-to}}
				{{#n.dropdown title='Charts' icon="growth" as |dd|}}
					{{#dd.link-to "line"}}
						Chart-Line{{/dd.link-to}}
					{{#dd.link-to "bar"}}
						Chart-Bar{{/dd.link-to}}
					{{#dd.link-to "chart-pie"}}
						Chart-Pie{{/dd.link-to}}
					{{#dd.link-to "chart-radar"}}
						Chart-Radar{{/dd.link-to}}
					{{#dd.link-to "chart-circle"}}
						Chart-Circle{{/dd.link-to}}
				{{/n.dropdown}}
				{{#n.link-to "without-code"}}{{bp-icon icon='edit'}}<span class="ml-2">WithoutCode</span>{{/n.link-to}}

			{{/bp-nav}}
		</nav>
	</aside>
	<section local-class="content" class='p-4'>
		{{outlet}}
	</section>
</section>